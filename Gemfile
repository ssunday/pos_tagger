source 'https://rubygems.org'

gem 'chart-js-rails'
gem 'chartkick'
gem 'engtagger'
gem 'rails'
gem 'rake'

group :development do
  gem 'guard-livereload', require: false
  gem 'guard-rspec'
  gem 'rubocop'
  gem 'rubocop-rails'
end

group :test, :development do
  gem 'pry'
  gem 'rails-controller-testing'
  gem 'rspec'
  gem 'rspec-rails'
end
